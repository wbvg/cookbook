<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.label :cuisine %>
  <%= f.text_field :cuisine %> <br/>

  <%= f.label :chef %>
  <%= f.text_field :chef%> <br/>

  <%= f.label :image %>
  <%= f.text_field :image %> <br/>


<% Recipe.order(:name).each do |recipe| %>
<span><%= recipe.name %> </span>
<%= check_box_tag 'book[recipe_ids][]', recipe.id, recipe.in?(@book.recipes.to_a) %>

<% end %>

  <%= f.submit %>
<% end %>